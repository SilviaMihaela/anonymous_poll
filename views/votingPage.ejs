<h1>Thing to be voted</h1>

<div class="options-div">
<%# gets the voting options and creates a button for each #%>
<% if(locals.options) {%>
    <% for(i=0; i< options.length; i++) { %>
        <% const option = options[i] %>
        <form action="/vote" method="POST">
            <input type="submit" name="<%= option[i] %>" value="<%= option %>">
        </form>
        <%}%>
<%}%>
</div>


